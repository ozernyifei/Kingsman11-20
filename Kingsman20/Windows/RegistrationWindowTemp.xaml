                             Style="{StaticResource Reg_TbxStyle}"
                             Text="Иванов"
                             />

                    <TextBlock Grid.Row="4"
                             Grid.Column="0"
                             Style="{StaticResource Reg_TbStyle}"
                             Text="Ваше имя"/>

                    <TextBlock Grid.Row="4"
                             Grid.Column="1"
                             Style="{StaticResource Reg_TbStyle}"
                             Text="Ваше имя"/>

                    <TextBox 
                             Grid.Row="5"                            
                             Grid.Column="0"
                             Text="Иванов"
                             Style="{StaticResource Reg_TbxStyle}"
                             />
                    <TextBox 
                             Grid.Row="5" 
                             Grid.Column="1"
                             Style="{StaticResource Reg_TbxStyle}"
                             Text="Иванов"
                             />

                    <TextBlock Grid.Row="6"
                             Grid.Column="0"
                             Style="{StaticResource Reg_TbStyle}"
                             Text="Ваше имя"/>

                    <TextBlock Grid.Row="6"
                             Grid.Column="1"
                             Style="{StaticResource Reg_TbStyle}"
                             Text="Ваше имя"/>

                    <TextBox 
                             Grid.Row="7"                            
                             Grid.Column="0"
                             Text="Иванов"
                             Style="{StaticResource Reg_TbxStyle}"
                             />
                    <TextBox 
                             Grid.Row="7" 
                             Grid.Column="1"
                             Style="{StaticResource Reg_TbxStyle}"
                             Text="Иванов"
                             />

                </Grid>

                <Button Name="btnSignIn" 
                        
                        Width="100"
                        Height="30" 
                        Margin="0 40 0 0" 
                        Content="Войти"
                        Background="Gray"
                        Foreground="White"
                        BorderThickness="0 0 0 0">

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" 
                                        Value="14"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock x:Name="BtnReg" 
                           Text="Регистрация"
                           MouseLeftButtonUp="BtnReg_MouseLeftButtonUp"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0 10 0 0"
                           FontSize="8"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
