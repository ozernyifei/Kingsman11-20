                    <TextBox 
                             Grid.Row="1" 
                             Grid.Column="1"
                             Style="{StaticResource Reg_TbxStyle}"
                             Text="Иванов"
                             />

                    <!--l-->

                    <TextBlock Grid.Row="2"
